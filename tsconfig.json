{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "flyxc/*": [
        "*"
      ],
      "@vaadin/*": [
        "frontend/src/vaadin/*",
        "common/src/vaadin/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "frontend/node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "removeComments": true
  },
  "exclude": [
    "frontend/static"
  ]
}
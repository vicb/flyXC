{
  "name": "run",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/run/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "outputPath": "apps/run/dist",
        "generatePackageJson": false
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node apps/run/dist/index.js"
      },
      "configurations": {
        "production": {
          "command": "node apps/run/dist/index.js"
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "options": {
        "file": "apps/run/Dockerfile",
        "platforms": ["linux/amd64", "linux/arm64"],
        "engine": "docker",
        "push": true,
        "pull": true,
        "tags": ["us-docker.pkg.dev/fly-xc/docker/run"]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["container"],
      "options": {
        "command": "gcloud run deploy trackers --image us-docker.pkg.dev/fly-xc/docker/run --platform managed"
      }
    }
  }
}
